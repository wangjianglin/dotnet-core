<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:ad="clr-namespace:Lin.Core.Controls"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    >
    
<Style TargetType="{x:Type ad:AddInControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ad:AddInControl}">
                    <ContentControl Content="{TemplateBinding Content}"/>
                    <!--<Grid>
                        <Button/>
                    </Grid>-->
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    
</ResourceDictionary>